<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Login">


    <TextView
        android:id="@+id/CA"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Create Account"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/PC"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@+id/CA"
        android:layout_marginLeft="@dimen/_20sdp"
        android:text="Please sign in to continue"
        android:textColor="@color/hintcolor"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_below="@id/PC"
        android:layout_marginStart="@dimen/_97sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/profilepic"
        app:civ_border_color="@color/main_color"
        app:civ_border_width="@dimen/_1sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginStart="@dimen/_130sdp"
        android:text="Select image"
        android:textColor="@color/hintcolor"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/N"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/PC"
        android:layout_marginLeft="@dimen/_27sdp"
        android:layout_marginTop="@dimen/_133sdp"
        android:text="Name"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_15sdp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/PC"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/_155sdp"
        android:layout_marginRight="20dp"
        android:background="@drawable/newbackground"
        android:drawableLeft="@drawable/person"
        android:ems="10"
        android:hint="Enter your name"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/_20sdp"
        android:textColorHint="@color/hintcolor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/name"
        android:layout_marginLeft="@dimen/_27sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="Email"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_15sdp" />


    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/_40sdp"
        android:textColor="@color/white"
        android:layout_marginRight="20dp"
        android:background="@drawable/newbackground"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:hint="Enter Your email"
        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/_20sdp"
        android:textColorHint="@color/hintcolor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/edt_email"
        android:layout_marginLeft="@dimen/_27sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="Password"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_15sdp" />


    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/edt_email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:background="@drawable/newbackground"
        android:drawableLeft="@drawable/pass"
        android:ems="10"
        android:hint="Enter Your password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/_20sdp"
        android:textColorHint="@color/hintcolor" />


    <Button
        android:id="@+id/btnsignup"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttonbackground"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Tv_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnsignup"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:textColor="@color/hintcolor"
        android:text="Already have an account?"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnsignup"
        android:layout_marginLeft="@dimen/_225sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:text="Sign in"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />



</RelativeLayout>