<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Login">


    <Button
        android:id="@+id/back_arrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/backarrow"
        android:backgroundTint="@color/main_color" />


    <TextView
        android:id="@+id/CA"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_90sdp"
        android:text="Login"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/PC"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@+id/CA"
        android:layout_marginLeft="@dimen/_20sdp"
        android:text="Please login in to continue"
        android:textColor="@color/hintcolor"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/PC">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_27sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="Email"
            android:textColor="@color/main_color"
            android:textSize="@dimen/_15sdp" />


        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/email"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/_47sdp"
            android:layout_marginRight="20dp"
            android:background="@drawable/newbackground"
            android:drawableLeft="@drawable/email"
            android:ems="10"
            android:hint="Enter Your email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/hintcolor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/edt_email"
            android:layout_marginLeft="@dimen/_27sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="Password"
            android:textColor="@color/main_color"
            android:textSize="@dimen/_15sdp" />


        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/edt_email"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginRight="20dp"
            android:background="@drawable/newbackground"
            android:drawableLeft="@drawable/pass"
            android:ems="10"
            android:hint="Enter Your password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/hintcolor" />


        <Button
            android:id="@+id/btnlogin"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/buttonbackground"
            android:text="Log in"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Tv_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnlogin"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="Create new account account?"
            android:textColor="@color/hintcolor"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnlogin"
            android:layout_marginLeft="@dimen/_241sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="Sign up"
            android:textColor="@color/main_color"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


    </RelativeLayout>





</RelativeLayout>